{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
  },
  "extends": [
    "airbnb-base",
    "plugin:vue/vue3-recommended",
    "plugin:tailwindcss/recommended",
    "@vue/eslint-config-typescript"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021
  },
  "plugins": [
    "vue",
    "tailwindcss"
  ],
  "rules": {
    "import/extensions": "off",
    "import/no-extraneous-dependencies": [
      0,
      {
        "packageDir ": "./src/"
      }
    ],
    "max-len": [
      "error",
      {
        "code": 100,
      }
    ],
    "no-unused-vars": "off",
    "vue/multi-word-component-names": "off",
  },
  // "settings": {
  //   "import/resolver": {
